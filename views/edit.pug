doctype html
html
  head
  body
    title #{title}
    form(action='/cadastro/update', method='post')
      for neguinho in petecas

        h1 Edite
        |         Nome: 
        input(type='hidden', name='id', value=neguinho._id)
        input(type='text', name='nome', value=neguinho.nome)
        br
        |         Idade: 
        input(type='text', name='idade', value=neguinho.idade)
        br
        input(type='submit', value='Editar')
        a(href="/") Voltar
        a(href="/cadastro/delete/"+neguinho._id) Deletar
      

          
